{
    "name": "@arkecosystem/utils",
    "description": "Performance oriented implementations of commonly used functions in TypeScript.",
    "version": "0.5.1",
    "contributors": [
        "Brian Faust <brian@ark.io>",
        "Joshua Noack <joshua@ark.io>"
    ],
    "license": "MIT",
    "main": "dist/index",
    "types": "dist/index",
    "files": [
        "dist"
    ],
    "scripts": {
        "prepublishOnly": "yarn test && yarn build",
        "pretest": "yarn lint && yarn build",
        "compile": "./node_modules/typescript/bin/tsc",
        "build": "yarn clean && yarn compile",
        "build:watch": "yarn clean && yarn compile -w",
        "clean": "del dist",
        "lint": "./node_modules/tslint/bin/tslint -c ./tslint.json 'src/**/*.ts' '__tests__/**/*.ts' --fix",
        "prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./src/**/*.{ts,js,json,md}\"",
        "bench": "yarn build && node benchmark/index.js",
        "test": "cross-env jest",
        "test:coverage": "cross-env jest --coverage",
        "test:debug": "cross-env node --inspect-brk ./node_modules/.bin/jest",
        "test:watch": "cross-env jest --watch",
        "test:watch:all": "cross-env jest --watchAll"
    },
    "dependencies": {
        "fast-case": "^1.3.0",
        "fast-copy": "^2.0.3",
        "fast-json-parse": "^1.0.3",
        "fast-safe-stringify": "^2.0.7",
        "fast-sort": "^1.5.6",
        "fast.js": "^0.1.1"
    },
    "devDependencies": {
        "@arkecosystem/crypto": "^2.5.24",
        "@faustbrian/benchmarker": "^0.1.2",
        "@sindresorhus/tsconfig": "^0.4.0",
        "@types/benchmark": "^1.0.31",
        "@types/jest": "^24.0.18",
        "@types/lodash": "^4.14.138",
        "@types/node": "^12.7.5",
        "@types/prettier": "^1.18.2",
        "benchmark": "^2.1.4",
        "codecov": "^3.5.0",
        "cross-env": "^6.0.0",
        "deepmerge": "^4.0.0",
        "del-cli": "^3.0.0",
        "husky": "^3.0.5",
        "hyperid": "^2.0.2",
        "jest": "^24.9.0",
        "jest-extended": "^0.11.2",
        "lint-staged": "^9.2.5",
        "lodash": "^4.17.15",
        "prettier": "^1.18.2",
        "random-object": "^1.3.4",
        "rfdc": "^1.1.4",
        "ts-jest": "^24.1.0",
        "tslint": "^5.20.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.6.3"
    },
    "engines": {
        "node": ">=10.x"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
