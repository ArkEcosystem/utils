{
    "name": "@arkecosystem/utils",
    "description": "Performance oriented implementations of commonly used functions in TypeScript.",
    "version": "0.3.0",
    "contributors": [
        "Brian Faust <brian@ark.io>",
        "Joshua Noack <joshua@ark.io>"
    ],
    "license": "MIT",
    "main": "dist/index",
    "types": "dist/index",
    "files": [
        "dist"
    ],
    "scripts": {
        "prepublishOnly": "yarn test && yarn build",
        "pretest": "yarn lint && yarn build",
        "compile": "./node_modules/typescript/bin/tsc",
        "build": "yarn clean && yarn compile",
        "build:watch": "yarn clean && yarn compile -w",
        "clean": "del dist",
        "docs": "./node_modules/typedoc/bin/typedoc src --out docs",
        "lint": "./node_modules/tslint/bin/tslint -c ./tslint.json 'src/**/*.ts' '__tests__/**/*.ts' --fix",
        "prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./src/**/*.{ts,js,json,md}\"",
        "bench": "yarn build && node benchmark/index.js",
        "test": "cross-env jest",
        "test:coverage": "cross-env jest --coverage",
        "test:debug": "cross-env node --inspect-brk ./node_modules/.bin/jest",
        "test:watch": "cross-env jest --watch",
        "test:watch:all": "cross-env jest --watchAll"
    },
    "dependencies": {
        "@flatten/array": "^1.1.7",
        "dottie": "^2.0.1",
        "fast-safe-stringify": "^2.0.6",
        "fast-sort": "^1.5.4",
        "fast.js": "^0.1.1",
        "hyperid": "^2.0.1"
    },
    "devDependencies": {
        "@arkecosystem/crypto": "^0.2.6",
        "@faustbrian/benchmarker": "^0.1.0",
        "@sindresorhus/tsconfig": "^0.1.1",
        "@types/dottie": "^2.0.2",
        "@types/jest": "^23.3.12",
        "@types/node": "^10.12.18",
        "benchmark": "^2.1.4",
        "codecov": "^3.1.0",
        "cross-env": "^5.2.0",
        "del-cli": "^1.1.0",
        "husky": "^1.3.1",
        "jest": "^23.6.0",
        "jest-extended": "^0.11.0",
        "lint-staged": "^8.1.0",
        "lodash": "^4.17.11",
        "prettier": "^1.15.3",
        "random-object": "^1.3.4",
        "ts-jest": "^23.10.5",
        "tslint": "^5.12.1",
        "tslint-config-prettier": "^1.17.0",
        "typedoc": "^0.14.1",
        "typescript": "^3.2.2"
    },
    "engines": {
        "node": ">=10.x"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "jest": {
        "testEnvironment": "node",
        "bail": false,
        "verbose": true,
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testMatch": [
            "**/*.test.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "collectCoverage": false,
        "coverageDirectory": "<rootDir>/.coverage",
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!**/node_modules/**"
        ],
        "watchman": false,
        "setupTestFrameworkScriptFile": "jest-extended"
    }
}
