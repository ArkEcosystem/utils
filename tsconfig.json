{
    "extends": "@sindresorhus/tsconfig",
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es2018"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "dist",
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2018",
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/**.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
